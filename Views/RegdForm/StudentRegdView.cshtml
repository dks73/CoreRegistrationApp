@model IEnumerable<Application.Models.StudentNew.ViewStudentNewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Student Details</title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="~/css/commonnav.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $('#Regdpage').click(function () {
                location.href = "/RegdForm/index";
            });
        });
    </script>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/RegdForm/LogOut">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-2 bg-light sidebar py-3">
                <h6 class="sidebar-heading px-3">Menu</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/RegdForm/Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active2" href="/RegdForm/StudentRegd">Student Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/RegdForm/LibrerianRegd">Librarian Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/RegdForm/ViewAllData">User Details</a>
                    </li>
                </ul>
            </div>

            <!-- Main Content -->
            <!-- Tab Bar -->
            <div class="container mt-5">
                <!-- Navigation Tabs -->
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/RegdForm/StudentRegd">Add</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/RegdForm/StudentRegdView">View</a>
                    </li>
                </ul>

                <!-- Form Section -->
                <div class="container mt-5">
                    <h1 class="text-center mb-4">Student Details</h1>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Student Name</th>
                                    <th>Course</th>
                                    <th>DOB</th>
                                    <th>Gender</th>
                                    <th>Roll No</th>
                                    <th>Email</th>
                                    <th>Phone No</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.studentname</td>
                                        <td>@item.course</td>
                                        <td>@item.dob</td>
                                        <td>@item.gender</td>
                                        <td>@item.rollno</td>
                                        <td>@item.email</td>
                                        <td>@item.phoneno</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>                  
                </div>
            </div>
        </div>
    </div>
</body>
</html>
